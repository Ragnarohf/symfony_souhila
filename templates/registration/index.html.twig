{% extends 'base.html.twig' %}

{% block title %}inscription
{% endblock %}

{% block body %}

	<div class="container">
		<h3>Formulaire d'inscription</h3>
		{{form_start(formulaire)}}


		<div class="form-group">
			{{form_row(formulaire.prenom, {'label':"prenom", 'attr':{'placeholder':'votre prenom','class':'form-control'}})}}
		</div>
		<div class="errorCustom">{{form_errors(formulaire.prenom)}}</div>


		<div class="form-group">
			{{form_row(formulaire.nom, {'label':"nom", 'attr':{'placeholder':'votre nom','class':'form-control'}})}}
		</div>
		<div>{{form_errors(formulaire.nom)}}</div>
		<div class="form-group">
			{{form_row(formulaire.email, {'label':"email", 'attr':{'placeholder':'votre email','class':'form-control'}})}}
		</div>
		{# <div>{{form_errors(formulaire.email)}}</div> #}


		{# debut #}
		<div class="form-group">

			<div class="col-md-6">

				{{form_row(formulaire.password, {'id':'password-field','attr':{'placeholder':'votre password','class':'form-control'}})}}
				<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
			</div>
			<div>{{form_errors(formulaire.password)}}</div>
			{# fin #}

			<div>
				{{form_label(formulaire.confirmPassword)}}
				{{form_widget(formulaire.confirmPassword)}}
			</div>
			<div>
				{{form_errors(formulaire.confirmPassword)}}
			</div>
			<div class="form-group">
				<button type="submit">inscription</button>
			</div>
			{{form_end(formulaire)}}
		</div>


	{% endblock %}
